{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-tailwindcss": {
      "projectType": "library",
      "root": "projects/ngx-tailwindcss",
      "sourceRoot": "projects/ngx-tailwindcss/src",
      "prefix": "tw",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-tailwindcss/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-tailwindcss/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-tailwindcss/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    }
  },
  "cli": {
    "packageManager": "pnpm"
  }
}
